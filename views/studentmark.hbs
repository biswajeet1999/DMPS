<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DMPS</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--j-Query-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!--local css-->
    <style>
      tr:hover {
        background: #90caf9 !important;
      }
      th {
        color: #fafafa;
        font-weight: normal;
        border-radius: 0px !important;
        background: #01579b !important;
      }
      table {
        background: #ffe0b2 !important;
      }
    </style>

</head>
<body>
    <!--header-->
    <header>
        <!--navbar-->
        <nav class="blue">
          <div class="container">
            <div class="nav-wrapper">
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <a href="#" class="brand-logo">DMPS</a>
                <ul id="nav-mobile" class="left hide-on-med-and-down right">
                  <li><a href="/student/home">Home</a></li>
                  <li><a href="/student/notice">Notice</a></li>
                  <li><a href="/student/teacher">Teacher</a></li>
                  <li><a href="/student/marks">Mark</a></li>
                  <li><a href="/student/logout">logout</a></li>
                  <li><a href="#" class="blue darken-1">{{name}}</a></li>
                </ul>              
                <!--sidebar menu-->
                <ul class="sidenav" id="mobile-demo">
                    <li><a href="#">{{name}}</a></li>
                    <li><a href="student/home" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Home</a></li>
                    <li><a href="/student/notice" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Notice</a></li>
                    <li><a href="/student/teacher" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Teacher</a></li>
                    <li><a href="/student/marks" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Mark</a></li>
                    <li><a href="/student/logout" class="btn waves-effect light-blue accent-3 white-text z-depth-4">logout</a></li>
                  </ul>
                </div>              
            </div>
        </nav>
    </header> 

    <section class="student-info">
      <div class="container">
        <div class="row">
          <div class="col m12">
            <h4>Name: &nbsp;{{name}}</h4>
            <h6>Class: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{subjects.class}}</h6>
            <p>Section: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{section}}</p>
            <p>Roll No: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{rollno}}</p>
          </div>
        </div>
      </div>
    </section>

    <section class="marks">
      <div class="container">
        <div class="row">
          
          <div class="col s12 center">
            <table class="highlight centered striped">
              <thead>
                <tr>
                    <th style="background: #3285b6 !important"></th>
                    {{#each subjects.subjects}}
                      <th>{{name}}</th>
                    {{/each}}
                    <th>Total Mark</th>
                    <th>Percentage</th>
                </tr>
              </thead>
              <tbody>
                <tr style="color: red">
                  <th class="center-align">Marks</th>
                  {{#each subjects.subjects}}
                    <td>{{getMonthlyMark maxmark}}</td>
                  {{/each}}
                  <td>{{getMonthlyTotalMark subjects}}</td>
                  <td>---</td>
                </tr> 
                <tr>
                  <th class="center-align">Monthly 1</th>
                  {{#each marks.marks.monthly1.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.monthly1.totalmark}}</td>
                  <td>{{marks.marks.monthly1.percentage}}</td>
                </tr>
                <tr>
                  <th class="center-align">Monthly 2</th>
                  {{#each marks.marks.monthly2.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.monthly2.totalmark}}</td>
                  <td>{{marks.marks.monthly2.percentage}}</td>
                </tr>
                <tr>
                  <th class="center-align">Monthly 3</th>
                  {{#each marks.marks.monthly3.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.monthly3.totalmark}}</td>
                  <td>{{marks.marks.monthly3.percentage}}</td>
                </tr>
                <tr>
                  <th class="center-align">Monthly 4</th>
                  {{#each marks.marks.monthly4.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.monthly4.totalmark}}</td>
                  <td>{{marks.marks.monthly4.percentage}}</td>
                </tr>
                <tr style="color: red">
                  <th class="center-align">Marks</th>
                  {{#each subjects.subjects}}
                    <td style="border-top: 1px solid red">{{maxmark}}</td>
                  {{/each}}
                  <td style="border-top: 1px solid red">{{getAnnualTotalMark subjects}}</td>
                  <td style="border-top: 1px solid red">---</td>
                </tr> 
                <tr>
                  <th class="center-align">Halfyearly</th>
                  {{#each marks.marks.halfyearly.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.halfyearly.totalmark}}</td>
                  <td>{{marks.marks.halfyearly.percentage}}</td>
                </tr>
                <tr>
                  <th class="center-align">Annual</th>
                  {{#each marks.marks.annual.marks}}
                    <td>{{mark}}</td>
                  {{/each}}
                  <td>{{marks.marks.annual.totalmark}}</td>
                  <td>{{marks.marks.annual.percentage}}</td>
                </tr>            
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </section> 
    
    <section class="print">
      <div class="container">
        <div class="row center">
          <a class="waves-effect waves-light btn purple darken-3" onclick="print()"><i class="material-icons right">print</i>PRINT</a>
        </div>
      </div>
    </section>

    <!--materialize init-->
    <script>
      
      $('document').ready(() => {
        // sidebar init
        $('.sidenav').sidenav();
      });
      
    </script>
    
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>