<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DMPS</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--j-Query-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>



</head>
<body>
    <!--header-->
    <header>
        <!--navbar-->
        <nav class="blue">
          <div class="container">
            <div class="nav-wrapper">
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <a href="#" class="brand-logo">DMPS</a>
                <ul id="nav-mobile" class="left hide-on-med-and-down right">
                  <li><a href="#">Home</a></li>
                  <li><a href="/admin/notice">Notice</a></li>
                  <li><a href="/admin/teacher">Teacher</a></li>
                  <li><a href="/admin/student">Student</a></li>
                  <li><a href="/admin/mark">Mark</a></li>
                  <li><a href="/admin/class">Class</a></li>
                  <li><a href="/admin/logout">logout</a></li>
                  <li><a href="#" class="blue darken-1">{{name}}</a></li>
                </ul>              
                <!--sidebar menu-->
                <ul class="sidenav" id="mobile-demo">
                    <li><a href="#">{{name}}</a></li>
                    <li><a href="#" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Home</a></li>
                    <li><a href="/admin/notice" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Notice</a></li>
                    <li><a href="/admin/teacher" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Teacher</a></li>
                    <li><a href="/admin/student" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Student</a></li>
                    <li><a href="/admin/mark" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Mark</a></li>
                    <li><a href="/admin/class" class="btn waves-effect light-blue accent-3 white-text z-depth-4">Class</a></li>
                    <li><a href="/admin/logout" class="btn waves-effect light-blue accent-3 white-text z-depth-4">logout</a></li>
                  </ul>
                </div>              
            </div>
        </nav>
      
    </header>  
    
  <section>

    <div class="row" style="margin-top: 5%">
      <div class="col s12 m6 offset-m3">
        <div class="card-panel z-depth-5">
          <div class="row" style="margin: 10%">
            <form action="/admin/notice/store" method="POST" enctype="multipart/form-data">

                <div class="row">
                  <div class="col s5">
                    <div class="input-field inline">
                      <input id="noticeno" type="text" name="noticeno">
                      <label for="noticeno">Notice No.</label>
                    </div>
                  </div>

                  <div class="col s5">
                    <div class="input-field inline">
                      <input id="date" type="text" name="date">
                      <label for="date">Date</label>
                    </div>
                  </div>
                </div> 

                <div class="row">
                  <div class="input-field col s12">
                    <textarea id="notice" class="materialize-textarea" name="notice"></textarea>
                    <label for="notice">Notice</label>
                  </div>
              </div>
              <button type="submit" class="btn-floating btn-large waves-effect waves-light right green" ><i class="material-icons">send</i></button>
              <div class="msg">{{msg}}</div>
            </form>
          </div>
        </div>
      </div>
  </div>


    
</section>


    <!--materialize init-->
    <script>
      
      $('document').ready(() => {
        // sidebar init
        $('.sidenav').sidenav();

      });
      
      $('#date').on('click', (evnt) => {
        $('#date').attr('placeHolder', 'dd/mm/yyyy');
      });
      $('#date').on('focusout', (evnt) => {
        $('#date').removeAttr('placeHolder');
      });
    </script>
    
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>